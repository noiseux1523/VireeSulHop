<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/overall_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.noiseux1523.vireesulhop.Procedure"
    tools:showIn="@layout/activity_procedure"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="SETUP &amp; MASH"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center"
                android:textSize="18dp"
                android:layout_margin="2dp"
                android:id="@+id/setupmash"
                android:textColor="@color/button_color"
                android:background="@drawable/button_border"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="6">

            <CheckBox
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:id="@+id/checkBox"
                android:layout_weight="1" />

            <TextView
                android:text="Double check all ingredients"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="4"
                android:id="@+id/description"
                android:layout_margin="5dp"
                android:textColor="@android:color/holo_green_light" />

            <Chronometer
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/chronometer2"
                android:gravity="center"
                android:layout_weight="1" />

        </LinearLayout>

            <TextView
                android:text="SPARGE &amp; BOIL"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center"
                android:textSize="18dp"
                android:layout_margin="2dp"
                android:id="@+id/spargeboil"
                android:textColor="@color/button_color"
                android:background="@drawable/button_border"/>

            <TextView
                android:text="FINAL STEPS"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center"
                android:textSize="18dp"
                android:layout_margin="2dp"
                android:id="@+id/finalsteps"
                android:textColor="@color/button_color"
                android:background="@drawable/button_border"/>

            <TextView
                android:text="RACKING"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center"
                android:textSize="18dp"
                android:layout_margin="2dp"
                android:id="@+id/racking"
                android:textColor="@color/button_color"
                android:background="@drawable/button_border"/>

            <TextView
                android:text="BOTTLING"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center"
                android:textSize="18dp"
                android:layout_margin="2dp"
                android:id="@+id/bottling"
                android:textColor="@color/button_color"
                android:background="@drawable/button_border"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
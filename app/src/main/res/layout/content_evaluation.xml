<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/overall_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.noiseux1523.vireesulhop.Evaluation"
    tools:showIn="@layout/activity_evaluation"
    android:orientation="vertical">

    <Button
        android:id="@+id/createfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create a file on Google Drive"
        android:onClick="onClickCreateFile"/>

    <Button
        android:id="@+id/openfile"
        android:layout_below="@+id/createfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open file from Google Drive"
        android:onClick="onClickOpenFile"/>


</LinearLayout>
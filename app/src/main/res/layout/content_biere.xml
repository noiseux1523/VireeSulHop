<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_biere"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.noiseux1523.vireesulhop.Biere"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/photo"
                android:scaleType="center"
                android:background="@drawable/beer"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="10"
            android:orientation="vertical">

            <TextView
                android:text="MOUSTACHE CARESSE"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:textSize="26sp"
                android:id="@+id/nom"
                android:gravity="center"
                android:textColor="@color/button_color"
                android:background="@drawable/button_border"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_height="0dp"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:weightSum="3">

                <TextView
                    android:text="ABV"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:id="@+id/abv"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textColor="@color/button_color" />

                <TextView
                    android:text="VERSION"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/version"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/button_color" />

                <TextView
                    android:text="IBU"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:id="@+id/ibu"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textColor="@color/button_color" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_height="0dp"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:weightSum="9">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center" />

                <TextView
                    android:text="4.6%"
                    android:textSize="18sp"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/abv_value"
                    android:gravity="center"
                    android:textColor="@android:color/holo_green_light"
                    android:backgroundTint="#FFFFFF" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:gravity="center" />

                <TextView
                    android:text="BETA"
                    android:textSize="18sp"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/version_value"
                    android:gravity="center"
                    android:textColor="@android:color/holo_green_light"
                    android:backgroundTint="#FFFFFF" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:gravity="center" />

                <TextView
                    android:text="16"
                    android:textSize="18sp"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/ibu_value"
                    android:gravity="center"
                    android:textColor="@android:color/holo_green_light"
                    android:backgroundTint="#FFFFFF" />

            </LinearLayout>

            <TextView
                android:text="UNE BELLE CONCOCTION DE DEUX GARS VRAIMENT CHAUDS QUI VEULENT SEULEMENT SE FAIRE AIMER... PEO..."
                android:textSize="20sp"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_weight="4"
                android:id="@+id/description"
                android:layout_margin="5dp"
                android:textColor="#FFFFFF" />

            <TextView
                android:text="INGREDIENTS"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="20sp"
                android:id="@+id/ingredients"
                android:textColor="@color/button_color" />

            <TextView
                android:text="MALTS, HOUBLONS, LEVURE, EAU, AMOUR..."
                android:textSize="18sp"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/ingredients_value"
                android:textColor="@android:color/holo_green_light"
                android:layout_marginBottom="5dp"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>